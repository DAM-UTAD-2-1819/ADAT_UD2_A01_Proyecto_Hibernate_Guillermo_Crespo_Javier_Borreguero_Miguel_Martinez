<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="Modelo.videojuegos" table="videojuegos">
		<id name="ID" type="int">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<property name="Nombre" type="string">
			<column name="Nombre" length="30" not-null="true" />
		</property>
		
		<property name="Fecha_Lanzamiento" type="string">
			<column name="Fecha_Lanzamiento" length="30" not-null="true" />
		</property>
		
		<property name="Desarrollador" type="string">
			<column name="Desarrollador" length="30" not-null="true" />
		</property>
		
		<property name="Plataforma" type="string">
			<column name="Plataforma" length="30" not-null="true" />
		</property>
	</class>

</hibernate-mapping>